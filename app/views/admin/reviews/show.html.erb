 <div class='container'>
   <div class="row">
      <h4 class="text-center my-4", style="background-color: #eee; width:150px;"><b>レビュー</b></h4>
        <table class='table table-hover'>
          <thead style="background-color: #f5f5f5;">
            <tr>
              <th>点数</th>
              <th>内容</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @review.score %></td>
              <td><%= @review.content%></td>
              <td><%= link_to "Delete", admin_review_path(@review), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %></td>
            </tr>
          </tbody>
        </table>
   </div>
 </div>

   
  
