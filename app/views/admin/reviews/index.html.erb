 <div class='container mt-5'>
  <div class='row'>
    <h4 class="text-center my-4", style="background-color: #eee; width:150px;"><b>レビュー</b></h4>
    <table class='table table-hover'>
      <thead style="background-color: #f5f5f5;">
        <tr>
          <th>ユーザー</th>
          <th>点数</th>
          <th>内容</th>
        </tr>
      </thead>
      <tbody>
        <% @reviews.each do |review| %>
        <tr>
          <td>
            <%= link_to admin_review_path(review.id) do %>
             <%= review.customer.full_name %></td>
            <% end %>
          <td><%= review.score %></td>
          <td><%= review.content%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>
 <div class="row justify-content-center mt-5">
  <%= paginate @reviews %>
 </div>
 
  
   

