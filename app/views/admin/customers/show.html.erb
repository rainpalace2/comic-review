<div class="ml-5 mt-5">
</div>

<div class='container mr-5'>
  <div class="row">
    <h4 class="text-center my-4 mt-5", style="background-color: #eee; width: 400px;">
      <b><%= @customer.last_name %> <%= @customer.first_name %>さんの会員詳細</b>
    </h4>
    <table class='table table-borderless justify-content-center'>
      <tbody>
        <tr>
          <th>会員ID</th>
          <td colspan='2'><%= @customer.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td colspan='2'><%= @customer.last_name %>  <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td colspan='2'><%= @customer.last_name_kana %>  <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td colspan='2'><%= @customer.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td colspan='2'>
            <% if @customer.is_deleted == false %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-danger">退会</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <th></th>
          <td colspan='2' sytle="text-right">
            <%= link_to "編集する", edit_admin_customer_path, class:"btn btn-success" %>
            <%= link_to "全てのレビュー", admin_reviews_path, class:"btn btn-primary ml-3" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

