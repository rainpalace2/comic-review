<div class='container px-5 px-sm-0'>
  <div class='row justify-content-center'>
    <div class='col-md-8 offset-md-1 mt-3'>
     <h4 class="mt-2 mb-4">
      <b class="mr-4">タグ詳細</b>
     </h4>
     <%= link_to "Tags List", tags_path %>
     <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>タグ名</th>
            <th>Book</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @tag.books.each do |book| %>
            <tr>
              <td></td>
              <%# タグ名 %>
              <td><%= @tag.name %></td>
              <%# タグに関連付くbook一覧 %>
              <td>
                <%= link_to book.title, book_path(book) %>
              </td>
              <td><%= link_to 'Delete', tag_path(@tag), method: :delete, data: {confirm: '関連づいたbookのタグが空になりますがタグを削除しますか？'}, class: "btn btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
  