<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h4 class="text-center", style="background-color: #eee; width:200px; margin:0 50px 50px;"><b>新規会員登録</b></h4>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <table class="table">
       <%= render "public/shared/error_messages", resource: resource %>

       <tbody>
         <tr>
           <td class="field", height="50px">
             <%= f.label :"名前" %>
           </td>
           <td>（姓）</td>
           <td>
             <%= f.text_field :last_name, autofocus: true, :placeholder => "last-name", class: "form-control" %>
           </td>
            <td>（名）</td>
           <td>
             <%= f.text_field :first_name, :placeholder =>"first-name", class: "form-control" %>
           </td>
         </tr>

         <tr>
           <td class="field", height="50px">
             <%= f.label :"メールアドレス" %>
           </td>
           <td></td>
           <td>
             <%= f.email_field :email,autocomplete: "email", :placeholder => "sample@example.com", class: "form-control" %>
           </td>
           <td></td>
           <td></td>
         </tr>

         <tr>
           <td class="field", height="50px">
              <%= f.label :"パスワード" %>
              <% if @minimum_password_length %>
              (<%= @minimum_password_length %>文字以上)
              <% end %>
            </td>
            <td></td>
            <td>
              <%= f.password_field :password, autocomplete: "new-password", :placeholder => "password", class:"form-control" %>
            </td>
            <td></td>
            <td></td>
         </tr>

         <tr>
            <td class="field", height="50px">
              <%= f.label :"パスワード(確認用)" %>
            </td>
            <td></td>
            <td>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder => "password confirmation", class: "form-control" %>
            </td>
            <td></td>
            <td></td>
          </tr>

          <tr>
            <td></td>
            <td></td>
            <td class="actions">
          　  <%= f.submit "新規登録", class:"btn btn-success btn-block" %>
            </td>
            <td></td>
            <td></td>
          </tr>
       </tbody>
      </table>
      <% end %>
      <h4 class="text-center col-md-offset-1 col-md-10", style="background-color: #eee; width:250px; margin:30px 20px;"><b>既に登録済みの方</b></h4>
      <div class="ml-5">
        <%= render "public/shared/links" %> からログインしてください。
      </dev>
    </div>
  </div>
</div>