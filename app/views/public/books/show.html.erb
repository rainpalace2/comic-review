<div class="container">
  <div class="row">
    <div class="col mt-2">
      <h4 class="text-center mt-4 ml-5", style="background-color: #eee; width:200px; padding-left: 12px;">
        <b>商品詳細</b>
      </h4>

      <section class="mt-4" style="top:50px;">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-md-10">
              <p><%= image_tag @book.image_url, size: '300x300' %></p>
              <p class="pt-3">タイトル : <%= @book.title %></p>
              <p>作者 : <%= @book.author %></p>
              <p>説明 : <%= @book.item_caption %></p>
            </div>
          </div>
        </div>
      </section>
     </div>
    </div>
    <section>
      <div class="container">
        <%= render 'public/reviews/form', review: @review, book: @book %>
      </div>
    </section>
  </div>


