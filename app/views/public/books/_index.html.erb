<h4 class="mt-2 mb-4">
  <b class="mr-4">投稿一覧</b>
</h4>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>タイトル</th>
      <th>説明</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <td><%= render "public/books/static_rate", book: book %></td>
      </tr>
    <% end %>
  </tbody>
</table>