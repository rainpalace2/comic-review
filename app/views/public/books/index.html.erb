<section class="section mt-6">
 <div class="container">
  <div class="row">
   <div class="col-lg-5">
    <strong>検索結果</strong>
    <% @books.each do |book| %>
    <div class="card mb-6">
    <header class="card-header">
     <p class="card-header-title">
       <%= book.title %>
     </p>
    </header>
    <div class="card-content">
      <%= link_to book_path(book.id) do %>
        <%= image_tag book.image_url, size: '200x200' %>
       <div class="mt-3">
        <%= book.author %>
       </div>
       <% end %>
       <p class="mt-2"><%= book.item_caption %></p>
     <div class="content">
      <div class="content average-score">
       <div class="star-rating mb-2">
        <div class="star-rating-front", style="color: #ffcc00;">★★★★★</div>
        <div class="star-rating-back", style="color: #ffcc00;">★★★★★</div>
       </div>
       <div class="average-score-display ml-3 pt-2">
        <%= book.avg_score %>点 (<%= book.reviews.count %>件のレビュー)
       </div>
      </div>
     </div>
    </div>
    <footer class="card-footer">
     <%= link_to book_reviews_path(book), class:"button card-footer-item" do %>
      レビューを見る
     <% end %>
     <%= link_to book_path(book), class:"button card-footer-item" do %>
      レビューを書く
     <% end %>
    </footer>
   </div>
  <% end %>
  </div>
 </div>
</div>
</section>
