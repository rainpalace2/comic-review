<div class="container">
  <div class="row">
    <div class="col">
      <div class="text-center mt-5"><%= form_tag(root_path, method: :get) do %>
        <%= text_field_tag :title, @title %>
        <%= button_tag "検索" %>
        <% end %>
      </div>
      
      <% if @books %>
         <% @books.each do |book| %>
          <%= link_to about_path do %>
           <%= image_tag book.image_url, size: '200x200' %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <p class="mt-3 mb-1"><%= book.title %></p>
          <p class="mb-5"><%= book.author %></p>
        </div>
      </div>
     <% end %>
     <% end %>
     <% end %>
    </div>
  </div>
</div>

