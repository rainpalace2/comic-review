<h4 class="text-center mt-4 pb-2", style="background-color: #eee; width:200px; padding-left: 12px;">
  <b>レビューを書く</b>
</h4>

<% if review.errors.any? %>
  <div class="notification danger">
    <h2><%= review.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%#= render "public/goods/static_rate", good: good %>

<%= form_with model: review, url: good_reviews_path(good), local: true do |f| %>
 <%= f.hidden_field :good_id, value: good.id %>
<div id="star" sytle="pt-2 pb-2">
    <%= f.hidden_field :score, id: "star" %>
</div>
 <%= f.text_area :content, rows: '5', :placeholder => "レビューをここに", class: "mt-3 w-100" %>
 <p>
 <%= f.submit "保存", class: "btn btn-success mt-3" %>
 <%= link_to "他のレビューを見る", good_reviews_path(good), class: "btn btn-primary mt-3 ml-3 ml-3" %>
 </p>
<% end %>

 <script>
   $('#star').empty();
   $('#star').raty({
     size     : 20,
     starOff:  '<%= asset_path('star-off.png') %>',
     starOn : '<%= asset_path('star-on.png') %>',
     starHalf: '<%= asset_path('star-half.png') %>',
     half: true,
     scoreName: 'review[score]'
   });
   </script>

