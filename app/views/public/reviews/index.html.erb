<section class="section">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10 mt-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <div class="align-middle"><%= @good.title %></div>
            </p>
          </header>
          
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
              </div>
              <div class="average-score-display ml-3 mt-2 mb-2">
                <!-- 平均点の星の表示の記述-->
                <div class="average-review-rating mb-2" data-score=<%= @good.avg_score %>></div>
                <script>
                  $('.average-review-rating').empty();
                  $('.average-review-rating').raty({
                    readOnly: true,
                    starOn: "<%= asset_path('star-on.png') %>",
                    starOff: "<%= asset_path('star-off.png') %>",
                    starHalf: "<%= asset_path('star-half.png') %>",
                    score: function() {
                      return $(this).attr('data-score')
                    }
                  });
                </script>
                <%= @good.avg_score %>点（<%= @good.reviews.count %>件のレビュー）
              </div>
            </div>
          </div>
        </div>
        
        <table class="table fullwidth text-center">
          <thead>
            <tr>
              <th>ユーザー</th><th>点数</th><th>内容</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.customer.full_name %></td>
                <td><%= review.score %></td>
                <td><%= review.content %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
       <p class="text-right">
         <%= link_to "戻る", good_path(@good), class: "btn btn-primary mr-3" %>
         <%#= link_to "一覧", search_goods_path, class: "btn btn-primary" %>
       </p>
      </div>
    </div>
  </div>
</section>
