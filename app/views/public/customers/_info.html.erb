<h4 class="mt-4 mb-4">
  <b class="mr-4">登録情報</b>
</h4>
<table class='table'>
  <tr><%= image_tag customer.get_profile_image, size: '100x100', class: "rounded-circle" %></tr>
  <tr>
	  <th>name</th>
	  <th><%= customer.last_name %>　<%= customer.first_name %></th>
  </tr>
  <tr>
	  <th>カナ</th>
	  <th><%= customer.last_name_kana %>　<%= customer.first_name_kana %></th>
  </tr>
  <% if current_customer != customer %>
  <% else %>
  <tr>
	  <th>メールアドレス</th>
	  <th><%= customer.email %></th>
  </tr>
  <% end %>
</table>

<!-- 編集画面のボタンを表示しない-->
<div class='row'>
<% if current_customer != customer && customer.full_name != "guestuser" %>
<% else %>
 <%= link_to "編集する", edit_customer_path(customer), class:"btn btn-primary w-25 mb-4" %>
<% end %>
</div>