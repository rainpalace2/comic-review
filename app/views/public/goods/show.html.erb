<div class="container">
  <div class="row">
    <div class="col mt-2">
      <h4 class="text-center mt-4", style="background-color: #eee; width:200px; padding-left: 12px;">
        <b>詳細情報</b>
      </h4>

      <section class="mt-4" style="top:50px;">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <p><%= image_tag @good.image_url, width: '300' %></p>
            </div>
            <div class="col-md-8 text-left">
              <p class="pt-3">タイトル : <%= @good.title %></p>
              <p>作者 : <%= @good.author %></p>
              <p>内容紹介 : <%= @good.item_caption %></p>
            </div>
          </div>
        </div>
      </section>
     </div>
    </div>
    <section>
      <div class="container">
        <%= render 'public/reviews/form', review: @review, good: @good %>
      </div>
    </section>
  </div>
