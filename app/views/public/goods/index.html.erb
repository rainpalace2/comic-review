<section class="section">
 <div class="container">
  <div class="row">
   <div class="col mb-3">
     <h4 class="text-center mt-4 ml-5 mb-3", style="background-color: #eee; width:200px; padding-left: 12px;">
        <b>おすすめ</b>
    </h4>
   </div>
  </div>
 </div>
</section>

<div class="carousel slide carousel-fade" id="image" data-interval="3000" data-ride="carousel" style="max-width: 1200px; margin: auto; background-color: #ccc">
      <ol class="carousel-indicators">
        <li data-target="#image" data-slide-to="0" class="active"></li>
        <li data-target="#image" data-slide-to="1"></li>
        <li data-target="#image" data-slide-to="2"></li>
        <li data-target="#image" data-slide-to="3"></li>
        <li data-target="#image" data-slide-to="4"></li>
      </ol>
      <div class="carousel-inner" role="listbox">
        <div class="carousel-item active">
          <div class="text-center">
            <%= image_tag "juju.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "tensura.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "king.webp", size: "300x300", class: "ml-2" %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="text-center">
            <%= image_tag "tokyo.jpg", size: "300x300", class: "ml-2" %>
            <%= image_tag "blue.jpg", size: "300x300", class: "ml-2" %>
            <%= image_tag "spy.webp", size: "300x300", class: "ml-2" %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="text-center">
            <%= image_tag "boku.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "kaguya.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "kaiju.webp", size: "300x300", class: "ml-2" %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="text-center">
            <%= image_tag "kakkou.jpg", size: "300x300", class: "ml-2" %>
            <%= image_tag "komi.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "konooto.webp", size: "300x300", class: "ml-2" %>
          </div>
        </div>
        <div class="carousel-item">
          <div class="text-center">
            <%= image_tag "one.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "oshi.webp", size: "300x300", class: "ml-2" %>
            <%= image_tag "sono.webp", size: "300x300", class: "ml-2" %>
          </div>
        </div>
      </div>
      <a href="#image" class="carousel-control-prev" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a href="#image" class="carousel-control-next" data-slide="next">
        <span class="carousel-control-next-icon"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
</div>

  <div class="container mt-5">
   <div class="row justify-content-center">
     <div class="col">
       <div class="wrap">
         <div class="item justify-content-center mt-1 row" style="display: flex;">
           <% @books.each do |book| %>
             <div class="col-3">
               <%= link_to good_path(book.id) do %>
               <div class="mr-3 mt-3">
                 <%= image_tag book.image_url, size: "200x200" %>
               <div><%= book.title %></div>
               <div><%= book.author %></div>
               </div>
               <% end %>
             </div>
           <% end %>
         </div>
          <div class="row">
             <div class="col-lg-8 offset-lg-4 mt-3 mb-3">
          </div>
         </div>
       </div>
     </div>
   </div>
 </div>
 <div class="row justify-content-center mb-5">
   <%= paginate @books %>
  </div>
  
<script>
  $(document).on('turbolinks:load', function() {
    $('.carousel').carousel({ interval: 3000 });
});
</script>