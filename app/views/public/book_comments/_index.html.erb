<table class='table table-hover table-inverse'>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to customer_path(book_comment.customer) do %>
            <%#= image_tag book_comment.customer.get_profile_image, size: "100x100" %><br>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if book_comment.customer == current_customer %>
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>