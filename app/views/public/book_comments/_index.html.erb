<table class='table table-hover table-inverse'>
  <tbody>
    <% book.book_comments.first(2).each do |book_comment| %>
      <tr>
        <td><%= l book.created_at, format: :short %></td>
        <td>
          <%= link_to customer_path(book_comment.customer) do %>
            <%= image_tag book_comment.customer.get_profile_image, size: "50x50", class: "rounded-circle" %><br>
          <% end %>
        </td>
        <td  class="align-middle"><%= book_comment.comment %></td>
        <td  class="align-middle">
          <% if book_comment.customer == current_customer %>
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>